<form id="updateBeer" data-id="{{beer.id}}">

  <div class="form-group">
    <label>Name:</label>
    <input type="text" name="[beer][name]" placeholder="Name" class="form-control name">
  </div>

  <div class="form-group">
    <label>Brand:</label>
    <input type="text" name="[beer][brand]" placeholder="Brand" class="form-control brand">
  </div>

  <div class="form-group">
    <label>Style:</label>
    <input type="text" name="[beer][style]" placeholder="Style" class="form-control style">
  </div>

  <div class="form-group">
    <label>Alc Content:</label>
    <input type="number" name="[beer][alc]" placeholder="Alc Content" class="form-control alc" min="1">
  </div>

  <div class="form-group">
    <label>Price:</label>
    <input type="number" name="[beer][price]" placeholder="Price" class="form-control price" min="1">
  </div>
  <input type="submit" class="button btn btn-default" name="submit" value="Update Beer">

</form>
